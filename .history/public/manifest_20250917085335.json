{
  "name": "Ruleta de Premios - Sorteo Interactivo",
  "short_name": "Ruleta Premios",
  "description": "Aplicación web interactiva para realizar sorteos y rifas con ruleta animada, scroll sincronizado y efectos de audio",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "landscape-primary",
  "theme_color": "#3498DB",
  "background_color": "#ECF0F1",
  "lang": "es",
  "dir": "ltr",
  
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "32x32",
      "type": "image/x-icon"
    },
    {
      "src": "favicon.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    },
    {
      "src": "pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "pwa-512x512.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "pwa-512x512.png",
      "sizes": "512x512", 
      "type": "image/png",
      "purpose": "maskable"
    }
  ],

  "screenshots": [
    {
      "src": "screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Pantalla principal en desktop"
    },
    {
      "src": "screenshot-mobile.png", 
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Pantalla principal en móvil"
    }
  ],

  "categories": ["games", "entertainment", "productivity", "utilities"],
  
  "shortcuts": [
    {
      "name": "Nuevo Sorteo",
      "short_name": "Sorteo",
      "description": "Iniciar un nuevo sorteo rápidamente",
      "url": "/?shortcut=new",
      "icons": [
        {
          "src": "shortcut-new.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Configuración",
      "short_name": "Config",
      "description": "Abrir panel de configuración",
      "url": "/?shortcut=config",
      "icons": [
        {
          "src": "shortcut-config.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Historial",
      "short_name": "Historial",
      "description": "Ver historial de sorteos",
      "url": "/?shortcut=history",
      "icons": [
        {
          "src": "shortcut-history.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],

  "features": [
    "Cross Platform",
    "offline",
    "audio",
    "animations",
    "file-handling"
  ],

  "permissions": [
    "storage",
    "audio"
  ],

  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/vnd.ms-excel": [".xls"]
      },
      "launch_type": "single-client"
    }
  ],

  "prefer_related_applications": false,
  
  "related_applications": [
    {
      "platform": "web",
      "url": "https://tu-dominio.com"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },

  "handle_links": "preferred",

  "protocol_handlers": [
    {
      "protocol": "web+roulette",
      "url": "/?handler=%s"
    }
  ],

  "scope_extensions": [
    {"origin": "*.tu-dominio.com"}
  ],

  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],

  "id": "com.tu-dominio.roulette-app"
}